{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                        
    "target": "es2017",                               
    "module": "commonjs",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,                           
    "outDir": "./dist",                             
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "exclude":[
    "./node_modules"
  ]
}